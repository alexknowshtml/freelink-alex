{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src"
  },
  "exclude": ["node_modules"]
}
